@using PagedList.Mvc
@model PagedList.IPagedList<Task5_Model.SaleModel>
@{
    ViewBag.Title = "DataBase";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div class="row">
    <div class="col-md-8">
        <form method="get">
            <div class="form-inline">
                <table class="table text-center">
                    <tr>
                        <th>
                            <label class="control-label">Manager name</label>
                        </th>
                        <th>
                            <label class="control-label">From date</label>
                        </th>
                        <th>
                            <label class="control-label">To date</label>
                        </th>
                    </tr>
                    <tr>
                        <th>
                            @Html.TextBox("name")
                        </th>
                        <th>
                            <input type="date" name="fromDate">
                        </th>
                        <th>
                            <input type="date" name="toDate">
                        </th>
                        <th>
                            <input type="submit" value="Фильтр" class="btn btn-default"/>
                        </th>
                    </tr>
                </table>

            </div>
        </form>
        @Html.ActionLink("Create", "Create")

        <table class="table table-bordered text-center">
            <tr>
                <th class="text-center">
                    @Html.DisplayName("Manager last name")
                </th>
                <th class="text-center">
                    @Html.DisplayName("Client name")
                </th>
                <th class="text-center">
                    @Html.DisplayName("Product name")
                </th>
                <th class="text-center">
                    @Html.DisplayName("Price")
                </th>
                <th class="text-center">
                    @Html.DisplayName("Date")
                </th>
                <th class="text-center">
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ManagerModel.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClientModel.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductModel.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductModel.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfSale.Date)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id = item.Id})
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                    </td>
                </tr>
            }
        </table>
        <br/>
        Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index", new {page}))
    </div>
</div>